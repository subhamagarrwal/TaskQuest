  </div>

  <% if (typeof quests !== 'undefined' && quests && quests.length > 0) { %>
    <div class="dashboard-card">
      <div class="card-header">
        <div class="card-avatar" style="background: linear-gradient(45deg, #f59e0b, #ef4444); display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">âœï¸</div>
        <div class="card-info">
          <h3>Edit Quest</h3>
          <p>Modify quest details</p>
        </div>
      </div>
